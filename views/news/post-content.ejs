<div class="mb-5">
    <div class="row mt-5">
        <div class="col-lg-8 mt-4 mr-5 mx-auto" style="box-shadow: 0px 4px 10px gray;">
            <div class="row mt-3 ml-2">
                <div id="post-content">
                    <h2>
                        <% if(lang == "vi") {%>
                        <%= post.vi_title %>
                        <% } else {%>
                        <%= post.jp_title %>
                        <% } %>
                    </h2>
                    <p id="date">Đăng ngày
                        <%= post.date.getDate() %>/<%= post.date.getMonth() %>/<%= post.date.getFullYear() %> </p>
                    <p id="author">Bởi <i><%= post.author %> </i></p>
                    <p id="main-content">
                        <% if(lang == "vi") {%>
                        <%= post.vi_content  %>
                        <% } else {%>
                        <%= post.jp_content %>
                        <% } %>
                    </p>
                </div>
            </div>
        </div>
        <nav id="post-nav" class="col-lg-3 mt-4" style="box-shadow: 0px 4px 10px gray;">
            <h3>
                <a href="#">
                    Xem thêm
                </a>
            </h3>
            <div>
                <hr>
                <% for(let i=0;i<5;i++) {%>
                    <a href="#">
                        <% if(lang == "vi") { %>
                        <article>
                            <a href="/news/<%= posts[i]._id %>"><%= posts[i].jp_title %> </a>
                        </article>
                        <hr>
                        <% } else{%>
                        <article>
                            <a href="/news/<%= posts[i]._id %>"><%= posts[i].jp_title %> </a>
                        </article>
                        <hr>
                        <% } %>
                <% } %>
            </div>
        </nav>
    </div>
</div>
<p id="test"></p>

<script>
    $(document).ready(function() {
        var content = $('#main-content').text();
        $('#main-content').html(content);
    });
</script>